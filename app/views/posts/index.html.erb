<h1>Posts </h1>
<p><%= link_to 'New Post', new_post_path, :class => 'button button-primary' %></p>
<% @posts.each do |post| %>
  <h2><%= post.title %></h2>
  <h3><%= post.author %></h3>
  <p><%= post.body %></p>
<%= link_to 'Show post', post_path(post), :class => 'button button-success' %> <br />
<%= link_to 'Edit post', edit_post_path(post), :class => 'button' %> <br />
<%= link_to 'DESTROY!!!', post, :class => 'button button-warning', method: :delete %>
<% end %>
