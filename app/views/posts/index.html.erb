<h1> Posts </h1>
<% @posts.each do |post| %>
  <h2><%= post.title %> - <%= post.author %></h2>
  <p><%= post.body %></p>
  <%= link_to 'Show post', post_path(post), class: 'button' %>
  <%= link_to 'Edit post', edit_post_path(post), class: 'button button-primary' %>
  <%= link_to 'Destroy post', post, method: :delete, class: 'button button-warning' %>
<hr>
<% end %>

<%= link_to 'New post', new_post_path, class: 'button button-success' %>
