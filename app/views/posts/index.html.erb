<h1>Posts </h1>
<p><%= link_to 'New Post', new_post_path %></p>
<% @posts.each do |post| %>
  <h2><%= post.title %></h2>
  <h3><%= post.author %></h3>
  <h4><%= post.body %></h4>
<%= link_to 'Show post', post_path(post) %> <br />
<%= link_to 'Edit post', edit_post_path(post) %> <br />
<%= link_to 'DESTROY!!!', post, method: :delete %>
<% end %>
